# Railway Environment Variables
PORT=3001
NODE_ENV=production

# Database (Railway PostgreSQL)
DATABASE_URL=postgres://user:password@host:port/database

# Frontend Environment Variables (if deploying separately)
NEXT_PUBLIC_API_URL=https://your-app-name.railway.app

# LLM Providers
OPENAI_API_KEY=your-openai-api-key

# Publishing (if using publishing features)
PUBLISHING_ENCRYPTION_KEY=your-32-character-hex-encryption-key

# Twitter OAuth (if using Twitter bot)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=https://your-app.vercel.app/api/publishing/auth/twitter/callback

# Facebook OAuth (if using Facebook publishing)
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_REDIRECT_URI=https://your-app.vercel.app/api/publishing/auth/facebook/callback
FACEBOOK_PAGE_ID=your-facebook-page-id

# LinkedIn OAuth (if using LinkedIn publishing)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=https://your-app.vercel.app/api/publishing/auth/linkedin/callback

# Email Services (if using email features)
SENDGRID_API_KEY=your-sendgrid-api-key
MAILCHIMP_API_KEY=your-mailchimp-api-key